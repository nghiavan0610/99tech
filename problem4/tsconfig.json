{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2019.object", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
